{
  "name": "say-hello-world",
  "displayName": "Hello, world!",
  "description": "Display \"Hello, world!\" in various ways!",
  "publisher": "wnrock",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/WnRockDev/hello_world.git"
  },
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "say-hello-world.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "say-hello-world.helloFile",
        "title": "Hello File"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "say-hello-world.helloFile",
          "group": "9_hello_world"
        }
      ],
      "editor/context": [
        {
          "when": "editorFocus",
          "command": "say-hello-world.helloFile",
          "group": "9_hello_world"
        }
      ]
    },
    "configuration": {
      "title": "Hello, world!",
      "properties": {
        "helloWorld.showStatusBarMessage": {
          "title": "Show Status Bar Message",
          "type": "boolean",
          "default": true,
          "description": "Enable status bar message"
        },
        "helloWorld.statusBarText": {
          "title": "Status Bar Text",
          "type": "string",
          "default": "Hello, world!",
          "description": "Text message to display on the status bar"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
